extends template/layout

block otherStylesheets
  link(href='/app/static/stylesheets/now.css', rel='stylesheet')

block content
  .background.blur
  .container
    .row.top
      .music
          h2.userLine.hide
            p.scrobbles.hide
              b
                span.scrobbleCount
              |  scrobbles
            p.detailedScrobbles.hide
              b
                span.artistScrobbleCount
              |  this artist â€¢  
              b
                span.trackScrobbleCount
              |  this track
            a.userLink(href=`http://last.fm/user/${user}`, target='_blank')
              i.fab.fa-lastfm
              | &nbsp;
              span.user= user
            | &nbsp;is listening to
          a.songLink(href='', target='_blank')
            img.cover
          h1.title
          h2.artist
    .row.bottom
      .corner.left
        .help.code
          .links
            a(href='/app/config')
              | settings 
              i.fas.fa-sliders-h.fa-sm
            a(href='https://github.com/JasonPuglisi/descent' target='_blank')
              | source 
              i.fab.fa-github.fa-sm
          .menuItem
            a(href='#' onclick='processKey({ keyCode: 69 }); return false;')
              i.fas.fa-sticky-note.fa-sm.fa-fw
              |  [e]xtended info
          .menuItem
            span.hueHelp.hide
              a(href='#' onclick='processKey({ keyCode: 76 }); return false;')
                i.fas.fa-lightbulb.fa-sm.fa-fw
                |  [l]ights (
                span.hueIndicator off
                | )
          .menuItem
            a(href='#' onclick='processKey({ keyCode: 72 }); return false;')
              i.fas.fa-question.fa-sm.fa-fw
              |  [h]elp
          .menuItem
            a(href='#' data-toggle-fullscreen)
              i.fas.fa-tablet-screen-button.fa-sm.fa-fw
              |  fullscreen
		  
      .corner.right
        

block otherJavascripts
